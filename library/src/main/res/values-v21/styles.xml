<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:statusBarColor">@color/light_theme_primary_dark</item>
        <item name="android:navigationBarColor">@color/light_theme_navigation_bar</item>
        <item name="drawablesTintColor">@color/drawable_tint_light</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="AppThemeAmoled" parent="AppTheme.Base.Amoled">
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme.Base.Dark">
        <item name="android:statusBarColor">@color/dark_theme_primary_dark</item>
        <item name="android:navigationBarColor">@color/dark_theme_navigation_bar</item>
        <item name="drawablesTintColor">@color/drawable_tint_dark</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="AppTheme.Base.LightLaunchScreen">
        <item name="android:windowBackground">@drawable/splash_screen_light</item>
        <item name="colorPrimaryDark">@color/splash_light_statusbar</item>
        <item name="colorAccent">@color/splash_light_statusbar</item>
        <item name="android:navigationBarColor">@color/light_theme_navigation_bar</item>
    </style>

    <style name="AppTheme.Base.DarkLaunchScreen">
        <item name="android:windowBackground">@drawable/splash_screen_dark</item>
        <item name="colorPrimaryDark">@color/splash_dark_statusbar</item>
        <item name="colorAccent">@color/splash_dark_statusbar</item>
        <item name="android:navigationBarColor">@color/dark_theme_navigation_bar</item>
    </style>

</resources>