<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_marginBottom="@dimen/cards_margin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/chips_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textStyle="bold"
            android:padding="@dimen/fabs_margin"
            android:visibility="visible"
            android:clickable="false"
            android:text="@string/general_info"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_margin="@dimen/cards_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/cards_margin"
                android:layout_marginEnd="@dimen/cards_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

            <com.pchmn.materialchips.ChipView
                    android:id="@+id/icons_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/cards_margin"
                    android:layout_marginStart="@dimen/cards_margin"
                    android:clickable="false"
                    app:deletable="false"/>

            <com.pchmn.materialchips.ChipView
                    android:id="@+id/wallpapers_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fabs_margin"
                    android:layout_marginStart="@dimen/fabs_margin"
                    android:clickable="false"
                    app:deletable="false"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/widgets_chips"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/fabs_margin"
                android:layout_marginRight="@dimen/cards_margin"
                android:layout_marginEnd="@dimen/cards_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.pchmn.materialchips.ChipView
                    android:id="@+id/zooper_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/cards_margin"
                    android:layout_marginStart="@dimen/cards_margin"
                    android:clickable="false"
                    app:deletable="false"/>

            <com.pchmn.materialchips.ChipView
                    android:id="@+id/kustom_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fabs_margin"
                    android:layout_marginStart="@dimen/fabs_margin"
                    android:clickable="false"
                    app:deletable="false"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>