<jahirfiquitiva.libs.fabsmenu.FABsMenuLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fabs_menu_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fab:fabs_menu_clickableOverlay="true">

    <jahirfiquitiva.libs.fabsmenu.FABsMenu
            android:id="@+id/fabs_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:clipChildren="false"
            fab:fab_menuMargins="@dimen/fabs_margin"
            fab:fab_moreButtonBackgroundColor="?attr/colorAccent"
            fab:fab_moreButtonSize="normal"
            fab:fab_labelsPosition="left"
            fab:fab_expandDirection="up">

        <jahirfiquitiva.libs.fabsmenu.TitleFAB
                android:id="@+id/rate_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_title="@string/rate"
                fab:fab_enableTitleClick="true"
                fab:fab_title_backgroundColor="?attr/cardBackgroundColor"
                fab:fabSize="mini"
                fab:backgroundTint="?attr/cardBackgroundColor"/>

        <jahirfiquitiva.libs.fabsmenu.TitleFAB
                android:id="@+id/share_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_title="@string/share"
                fab:fab_enableTitleClick="true"
                fab:fab_title_backgroundColor="?attr/cardBackgroundColor"
                fab:fabSize="mini"
                fab:backgroundTint="?attr/cardBackgroundColor"/>

        <jahirfiquitiva.libs.fabsmenu.TitleFAB
                android:id="@+id/donate_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_title="@string/donate"
                fab:fab_enableTitleClick="true"
                fab:fab_title_backgroundColor="?attr/cardBackgroundColor"
                fab:fabSize="mini"
                fab:backgroundTint="?attr/cardBackgroundColor"/>

        <jahirfiquitiva.libs.fabsmenu.TitleFAB
                android:id="@+id/help_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_title="@string/section_help"
                fab:fab_enableTitleClick="true"
                fab:fab_title_backgroundColor="?attr/cardBackgroundColor"
                fab:fabSize="mini"
                fab:backgroundTint="?attr/cardBackgroundColor"/>

    </jahirfiquitiva.libs.fabsmenu.FABsMenu>

</jahirfiquitiva.libs.fabsmenu.FABsMenuLayout>