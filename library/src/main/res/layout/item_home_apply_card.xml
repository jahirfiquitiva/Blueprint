<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/apply_card"
        android:layout_margin="@dimen/cards_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorAccent">

    <LinearLayout
            android:id="@+id/apply_layout"
            android:orientation="vertical"
            android:layout_margin="@dimen/cards_margin"
            android:paddingLeft="@dimen/cards_margin"
            android:paddingStart="@dimen/cards_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlSymmetry">

        <TextView
                android:id="@+id/apply_title"
                android:layout_marginTop="@dimen/cards_margin"
                android:layout_marginBottom="@dimen/cards_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                tools:text="Apply Blueprint"/>

        <TextView
                android:id="@+id/apply_content"
                android:layout_marginTop="@dimen/cards_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                tools:text="@string/apply_content"/>

        <LinearLayout
                android:layout_marginTop="@dimen/cards_margin"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

            <android.support.v7.widget.AppCompatButton
                    android:id="@+id/apply_dismiss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackgroundBorderless"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="@android:string/cancel"/>

            <android.support.v7.widget.AppCompatButton
                    android:id="@+id/apply_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackgroundBorderless"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="@string/apply"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>