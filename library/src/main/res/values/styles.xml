<resources>

    <style name="CardContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/fabs_margin</item>
        <item name="android:paddingRight">@dimen/fabs_margin</item>
        <item name="android:paddingTop">@dimen/cards_margin</item>
        <item name="android:paddingBottom">@dimen/cards_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ZooperCardContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/items_spacing</item>
        <item name="android:paddingRight">@dimen/items_spacing</item>
        <item name="android:paddingTop">@dimen/items_spacing</item>
        <item name="android:paddingBottom">@dimen/items_spacing</item>
    </style>

    <style name="AboutContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/items_spacing_small</item>
        <item name="android:paddingRight">@dimen/items_spacing_small</item>
        <item name="android:paddingTop">@dimen/items_spacing</item>
        <item name="android:paddingBottom">@dimen/items_spacing</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ListsContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/items_spacing_small</item>
        <item name="android:paddingRight">@dimen/items_spacing_small</item>
        <item name="android:paddingTop">@dimen/items_spacing_small</item>
        <item name="android:paddingBottom">@dimen/items_spacing_small</item>
    </style>

    <style name="PreviewContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/items_spacing</item>
        <item name="android:paddingRight">@dimen/items_spacing</item>
        <item name="android:paddingTop">@dimen/items_spacing</item>
        <item name="android:paddingBottom">@dimen/items_spacing</item>
    </style>

    <style name="HomeCardContent" parent="android:Widget">
        <item name="android:padding">@dimen/fabs_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <bool name="isFrames">false</bool>

    <style name="DrawerTextsWithShadow">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">#66000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

</resources>