<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/viewerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <jahirfiquitiva.libs.blueprint.ui.views.TouchImageView
                android:id="@+id/big_wallpaper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        <ProgressBar
                android:id="@+id/progress"
                style="?android:progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/status_bar_height">

            <ImageView
                    android:id="@+id/toolbarGradient"
                    android:layout_width="match_parent"
                    android:layout_height="84.0dip"
                    android:background="@drawable/toolbar_gradient"
                    tools:ignore="ContentDescription"/>
        </LinearLayout>

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="@dimen/status_bar_height"
                android:background="@android:color/transparent"
                android:theme="?attr/actionBarTheme"
                app:popupTheme="?attr/actionBarPopupTheme"
                app:contentInsetStart="@dimen/second_keyline"/>

    </FrameLayout>

    <LinearLayout
            android:id="@+id/iconsA"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/iconsB"
            android:layout_gravity="center_vertical"
            android:background="?attr/cardBackgroundColor"
            android:minHeight="?actionBarSize"
            android:orientation="horizontal"
            tools:ignore="UnusedAttribute">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

            <ImageView
                    android:id="@+id/download"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/dialog_margin"
                    android:background="?selectableItemBackgroundBorderless"
                    tools:ignore="ContentDescription"/>

            <ImageView
                    android:id="@+id/apply"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="@dimen/dialog_margin"
                    android:layout_marginRight="@dimen/dialog_margin"
                    android:background="?selectableItemBackgroundBorderless"
                    tools:ignore="ContentDescription"/>

            <ImageView
                    android:id="@+id/info"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?selectableItemBackgroundBorderless"
                    tools:ignore="ContentDescription"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/iconsB"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@id/iconsA"
            android:background="?attr/cardBackgroundColor"
            android:gravity="center_vertical"
            android:minHeight="?actionBarSize"
            android:orientation="horizontal"
            tools:ignore="UnusedAttribute">

        <TextView
                android:id="@+id/wallName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:text="This is a super long text just to test how the app puts the ellipsis."/>

    </LinearLayout>

</RelativeLayout>