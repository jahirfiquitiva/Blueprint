<jahirfiquitiva.libs.blueprint.ui.views.BlueprintCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/faq_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@anim/card_lift"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/cards_elevation"
        app:cardPreventCornerOverlap="false"
        tools:ignore="UnusedAttribute">

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            style="@style/CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/faq_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                tools:text="Question"/>

        <TextView
                android:id="@+id/faq_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/lists_padding"
                tools:text="Answer"/>

    </LinearLayout>

</jahirfiquitiva.libs.blueprint.ui.views.BlueprintCardView>